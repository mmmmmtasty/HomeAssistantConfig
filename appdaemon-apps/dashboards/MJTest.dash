title: Main Panel
widget_dimensions: [120, 120]
widget_size: [1, 1]
widget_margins: [5, 5]
columns: 8
global_parameters:
    use_comma: 0
    precision: 1
    use_hass_icon: 1

clock:
  widget_type: clock
  time_format: 24hr

living_room:
    widget_type: binary_sensor
    title: Living Room
    entity: binary_sensor.motion_living_room_motion
    state_text: 1


layout:
  - clock(4x1)
  - light.downstairs_hall, light.living_room, living_room
  - 
  - include: footer 
